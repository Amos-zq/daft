<launch>

  <node name="ar_kinect" pkg="ar_kinect" type="ar_kinect" respawn="false" output="screen">
    <param name="marker_pattern_list" type="string" value="$(find ar_fixed_frame)/data/markers_evaluation"/>
    <param name="marker_data_directory" type="string" value="$(find ar_pose)"/>
    <param name="threshold" type="int" value="120"/>
    <param name="publish_visual_markers" type="bool" value="true"/>
    <remap from="/camera/rgb/points" to="/camera/depth_registered/points"/>
  </node>

  <node name="ar_fixed_frame_publisher" pkg="ar_fixed_frame" type="fixed_frame_publisher" respawn="false" output="screen"/>

</launch>
